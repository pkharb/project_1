<div class="jumbotron jumbotron-fluid">
	<div class="container">
		<h1 class="display-4">Welcome <%= user.name %> !</h1>
		<p class="lead">
			 <%= user.email %>%>
		</p>
	</div>
</div>

<h2 style="padding-bottom:10px;">Recent Articles</h2>
<% myArticles.articles.forEach(e => { %>
<div class="card" style="margin-bottom: 2rem; background: #9b1f69">
  <div class="card-body">
    <h5 class="card-title">Title : <%= e.title %> </h5>
    <h4 class="card-title"> <%= e.author %> </h5>
      <img src="<%= e.urlToImage %>" alt="" style="padding-bottom:10px; width:80%;">
    <p class="card-text"><%= e.content %></p>
    <a href="<%= e.url %>>" class="btn btn-primary">Read More</a>
  </div>
</div>
<% }) %>
